html
    head
        meta(charset='UTF-8')
        title= 'Graphite Frontend'
        link(rel='stylesheet', href='/public/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/public/bootstrap/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/public/css/style.css')
        script(type='text/javascript').
            !{templates}
    body
        nav(class='navbar navbar-inverse navbar-fixed-top', role='navigation')
            div.navbar-header
                a.navbar-brand(href='#') Graphite Frontend
            div.col-lg-9
                form#interval(class='navbar-form form-inline navbar-left')
                    div(class='input-group input-group-sm col-lg-2')
                        input#relative(class='form-control', type='text', value='24')
                        div.input-group-btn
                            button#relativeUnit(type='button', class='btn btn-default dropdown-toggle', data-toggle='dropdown')
                                span.unit Hours
                                span.caret
                            ul(class='dropdown-menu pull-right')
                                li
                                    a(href="#", unit='s') Seconds
                                li
                                    a(href="#", unit='min') Minutes
                                li
                                    a(href="#", unit='h') Hours
                                li
                                    a(href="#", unit='d') Days

                    div.divider
                    p.navbar-text From
                    div(class='input-group input-group-sm col-lg-2')
                        input.form-control(name='from_d', type='date', placeholder='From')
                    div(class='input-groupinput-group-sm  col-lg-2')
                        input.form-control(name='from_t', type='time', placeholder='hh:mm')
                    div.divider
                    p.navbar-text To
                    div(class='input-group input-group-sm col-lg-2')
                        input.form-control(name='until_d', type='date', placeholder='To')
                    div(class='input-group input-group-sm col-lg-2')
                        input.form-control(name='until_t', type='time', placeholder='hh:mm')
                    input#setabsolute(class='btn btn-primary btn-sm', type='submit', value='set')




        div.container-fluid
            div.row
                div#nav(class='col-md-2 fixed')
                    h1#title Dashboard
                    ul#hostlist(class='nav nav-pills nav-stacked')

                div#body(class='col-md-9')
                    h2 Dash

        div#overlay


        script(type='text/javascript', src='//code.jquery.com/jquery.js')
        script(type='text/javascript', src='/socket.io/socket.io.js')
        script(type='text/javascript', src='/public/js/jade.runtime.js')
        script(type='text/javascript', src='/public/bootstrap/js/bootstrap.min.js')
        script(type='text/javascript', src='/public/js/graphTemplates.js')
        script(type='text/javascript', src='/public/js/graph.js')
        script(type='text/javascript', src='/public/js/host.js')
        script(type='text/javascript', src='/public/js/main.js')
        script(type='text/javascript').
            var graphite;
            $(document).ready(function(){
                graphite = new Graphite();
            });
